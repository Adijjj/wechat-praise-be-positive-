import tkinter as tk
import random
import threading
import time
import sys

# 30+ æ¡æ­£èƒ½é‡è¯­å½•
messages = [
    "ä»Šå¤©ä½ è¾›è‹¦å•¦ ğŸŒŸ", "å·²ç»åšå¾—å¾ˆå¥½å•¦ ğŸ‘", "ç»§ç»­åŠ æ²¹ï¼Œæˆ‘ç›¸ä¿¡ä½  ğŸ’ª", "åˆ«å¤ªç´¯äº†ï¼Œä¼‘æ¯ä¸€ä¸‹ ğŸ˜Œ",
    "ä½ çœŸçš„å¾ˆæ£’ ğŸ’–", "ä½ çš„åŠªåŠ›ä¸€å®šä¼šæœ‰å›æŠ¥ âœ¨", "ç¬‘ä¸€ç¬‘ï¼Œä¸–ç•Œæ›´ç¾å¥½ ğŸ˜Š", "æ¯ä¸€æ­¥éƒ½ç®—æ•°ï¼ŒåŠ æ²¹ï¼ğŸƒâ€â™‚ï¸",
    "ä¿æŒçƒ­çˆ±ï¼Œå¥”èµ´å±±æµ· ğŸ’«", "ä½ å€¼å¾—è¢«å–œæ¬¢ ğŸ’", "å†å°çš„è¿›æ­¥ï¼Œä¹Ÿæ˜¯å‘å‰ ğŸ’", "åˆ«æ‹…å¿ƒï¼Œä¸€åˆ‡éƒ½ä¼šå¥½èµ·æ¥çš„ ğŸŒˆ",
    "ä½ æ˜¯ç‹¬ä¸€æ— äºŒçš„å­˜åœ¨ ğŸ’«", "å°±è¿™æ ·ç»§ç»­é—ªå…‰å§ âœ¨", "å–å£æ°´ï¼Œæ”¾æ¾ä¸€ä¸‹ï½ ğŸ’§", "ä½ ä»Šå¤©ä¹Ÿå¾ˆå‹‡æ•¢ ğŸ’ª",
    "ä½ çš„ç¬‘å®¹çœŸæ²»æ„ˆ ğŸ˜„", "åŠªåŠ›çš„ä½ æœ€ç¾ ğŸŒ»", "æ¯ä¸ªä»Šå¤©ï¼Œéƒ½æ˜¯å…¨æ–°çš„å¼€å§‹ ğŸŒ…", "åšæŒä¸€ä¸‹ï¼Œå†èµ°ä¸€æ­¥å°±åˆ°äº†ï¼ğŸš¶â€â™‚ï¸",
    "ä½ å·²ç»åšå¾—æ¯”æ˜¨å¤©æ›´å¥½å•¦ ğŸ‘", "ç”Ÿæ´»ä¸æ˜“ï¼Œä½†ä½ å€¼å¾— ğŸŒ¼", "æ¸©æŸ”ä¸€ç‚¹ï¼Œä¹Ÿå¯¹è‡ªå·±æ¸©æŸ”ç‚¹ ğŸ’—",
    "ä½ ä¸æ˜¯ä¸€ä¸ªäººï¼Œæˆ‘åœ¨ä¸ºä½ åŠ æ²¹ ğŸ™Œ", "é˜³å…‰æ­£å¥½ï¼Œé€‚åˆå¾®ç¬‘ ğŸŒ", "ç›¸ä¿¡è‡ªå·±ï¼Œä½ å¯ä»¥çš„ï¼ğŸ”¥",
    "åˆ«å¿˜äº†å¤¸å¤¸è‡ªå·± ğŸ‘‘", "ç´¯äº†å°±çœ‹çœ‹å¤©ï¼Œé£ä¸€ç›´éƒ½åœ¨ ğŸŒ¤", "ä¸–ç•Œå› ä¸ºæœ‰ä½ è€Œæ›´å¯çˆ± ğŸ’•",
    "åšè‡ªå·±å–œæ¬¢çš„äº‹å§ ğŸŒ·", "ä½ å€¼å¾—è¢«æ¸©æŸ”ä»¥å¾… ğŸ’–", "å°ç›®æ ‡ä¹Ÿå€¼å¾—åº†ç¥ ğŸ‰", "å¿ƒæ€€å¸Œæœ›ï¼Œä¸€åˆ‡éƒ½ä¸æ™š ğŸŒŸ",
    "ç”Ÿæ´»åœ¨å‘å…‰ï¼Œä½ ä¹Ÿæ˜¯ âœ¨", "å‘å‰èµ°å§ï¼Œå‰æ–¹æœ‰å…‰ ğŸ’¡"
